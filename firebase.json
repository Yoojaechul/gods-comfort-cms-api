{
  "functions": [
    {
      "source": "cms",
      "codebase": "cms"
    }
  ],
  "hosting": {
    "target": "cms",
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/auth/**",
        "run": { "serviceId": "cms-api", "region": "asia-northeast3" }
      },
      {
        "source": "/creator/videos",
        "run": { "serviceId": "cms-api", "region": "asia-northeast3" }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/assets/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ]
  }
}
